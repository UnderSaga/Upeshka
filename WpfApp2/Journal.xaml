<Window x:Class="WpfApp2.Journal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Journal" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Фильтр"/>
            <TextBox x:Name="filterTextBox" TextChanged="filterTextBox_TextChanged_1" />
            <ListBox x:Name="groups" ItemsSource="{Binding Groups}" DisplayMemberPath="Name" IsSynchronizedWithCurrentItem="False"/>
        </StackPanel>
    </Grid>
</Window>
